@inject NavigationManager Nav
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["Normyx.Web.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <ErrorBoundary>
        <ChildContent>
            <Routes @rendermode="PageRenderMode" />
        </ChildContent>
        <ErrorContent Context="exception">
            <div class="card-shell" style="max-width:960px; margin:1rem auto;">
                <EnterpriseErrorPanel
                    ErrorText="@exception.ToString()"
                    FriendlyMessage="An application rendering error occurred."
                    RetryLabel="Reload Workspace"
                    OnRetry="ReloadWorkspaceAsync" />
            </div>
        </ErrorContent>
    </ErrorBoundary>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    private static readonly InteractiveServerRenderMode PageRenderMode = new(prerender: false);

    private Task ReloadWorkspaceAsync()
    {
        try
        {
            Nav.NavigateTo(Nav.Uri, forceLoad: true);
        }
        catch (NavigationException)
        {
            // Blazor can throw this as a control-flow signal in redirect scenarios.
        }
        return Task.CompletedTask;
    }
}
