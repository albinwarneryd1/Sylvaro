@page "/tenant-settings"
@inject Normyx.Web.Services.NormyxApiClient Api
@inject Normyx.Web.Services.AuthSession Session
@inject NavigationManager Nav

<PageTitle>Tenant Settings - Normyx AI</PageTitle>

@if (!Session.IsAuthenticated)
{
    <div class="card-shell"><p>Please <a href="/login">log in</a>.</p></div>
}
else
{
    <div class="card-shell">
        <h1>Tenant Settings</h1>
        <p>Manage users, roles and webhook integrations.</p>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="alert-danger">@_error</div>
        }

        @if (_tenant is not null)
        {
            <p><strong>@_tenant.Name</strong> (created @_tenant.CreatedAt.ToString("u"))</p>
            <EditForm OnValidSubmit="SaveTenantAsync">
                <div class="field-grid">
                    <InputText @bind-Value="_tenantName" class="text-input" placeholder="Tenant name" />
                </div>
                <button class="btn-small" type="submit">Update tenant name</button>
            </EditForm>
        }

        <h2>Users</h2>
        <table class="table-shell">
            <thead><tr><th>Email</th><th>Name</th><th>Roles</th></tr></thead>
            <tbody>
                @foreach (var user in _users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.DisplayName</td>
                        <td>@string.Join(", ", user.Roles ?? [])</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Add user</h3>
        <EditForm Model="_newUser" OnValidSubmit="CreateUserAsync">
            <div class="field-grid">
                <InputText @bind-Value="_newUser.Email" class="text-input" placeholder="Email" />
                <InputText @bind-Value="_newUser.DisplayName" class="text-input" placeholder="Display name" />
                <InputText @bind-Value="_newUser.Password" class="text-input" type="password" placeholder="Password" />
            </div>
            <p>Roles</p>
            @foreach (var role in _roles)
            {
                <label style="display:block;">
                    <InputCheckbox Value="@_selectedNewUserRoles.Contains(role.Name)" ValueChanged="value => ToggleNewUserRole(role.Name, value)" />
                    @role.Name
                </label>
            }
            <button class="btn-main" type="submit">Create user</button>
        </EditForm>

        <h2>Integrations</h2>
        <p>Configure webhook stubs for Jira and Azure DevOps exports.</p>

        <h2>Policy Packs</h2>
        <p>Enable or disable versioned compliance packs for this tenant.</p>
        <ul>
            @foreach (var pack in _policyPacks)
            {
                <li>
                    <label>
                        <InputCheckbox Value="@pack.Enabled" ValueChanged="async enabled => await SetPolicyPackAsync(pack.Id, enabled)" />
                        @pack.Name (@pack.Version) - @pack.Scope
                    </label>
                </li>
            }
        </ul>

        <div class="card-shell" style="margin-top:0.8rem;">
            <h3>Jira webhook</h3>
            <EditForm Model="_jira" OnValidSubmit="SaveJiraWebhookAsync">
                <div class="field-grid">
                    <InputText @bind-Value="_jira.WebhookUrl" class="text-input" placeholder="https://..." />
                    <InputText @bind-Value="_jira.AuthHeader" class="text-input" placeholder="Authorization header (optional)" />
                </div>
                <div class="btn-row">
                    <button class="btn-small" type="submit">Save Jira</button>
                    <button class="btn-small" type="button" @onclick="TestJiraWebhookAsync">Test Jira</button>
                </div>
                <label><InputCheckbox @bind-Value="_jira.IsEnabled" /> Enabled</label>
            </EditForm>
        </div>

        <div class="card-shell" style="margin-top:0.8rem;">
            <h3>Azure DevOps webhook</h3>
            <EditForm Model="_azureDevOps" OnValidSubmit="SaveAzureWebhookAsync">
                <div class="field-grid">
                    <InputText @bind-Value="_azureDevOps.WebhookUrl" class="text-input" placeholder="https://..." />
                    <InputText @bind-Value="_azureDevOps.AuthHeader" class="text-input" placeholder="Authorization header (optional)" />
                </div>
                <div class="btn-row">
                    <button class="btn-small" type="submit">Save Azure</button>
                    <button class="btn-small" type="button" @onclick="TestAzureWebhookAsync">Test Azure</button>
                </div>
                <label><InputCheckbox @bind-Value="_azureDevOps.IsEnabled" /> Enabled</label>
            </EditForm>
        </div>

        @if (!string.IsNullOrWhiteSpace(_integrationMessage))
        {
            <p>@_integrationMessage</p>
        }
    </div>
}

@code {
    private Normyx.Web.Models.TenantDto? _tenant;
    private string _tenantName = string.Empty;
    private List<Normyx.Web.Models.UserDto> _users = [];
    private List<Normyx.Web.Models.RoleDto> _roles = [];
    private List<Normyx.Web.Models.IntegrationWebhookDto> _integrations = [];
    private List<Normyx.Web.Models.PolicyPackSelectionDto> _policyPacks = [];

    private string _error = string.Empty;
    private string _integrationMessage = string.Empty;

    private readonly CreateUserForm _newUser = new();
    private readonly WebhookForm _jira = new();
    private readonly WebhookForm _azureDevOps = new();
    private readonly HashSet<string> _selectedNewUserRoles = ["ProductOwner"];

    protected override async Task OnInitializedAsync()
    {
        if (!Session.IsAuthenticated)
        {
            return;
        }

        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            _tenant = await Api.GetAsync<Normyx.Web.Models.TenantDto>("/tenants/me");
            _tenantName = _tenant?.Name ?? string.Empty;
            _users = (await Api.GetAsync<List<Normyx.Web.Models.UserDto>>("/tenants/users")) ?? [];
            _roles = (await Api.GetAsync<List<Normyx.Web.Models.RoleDto>>("/tenants/roles")) ?? [];
            _integrations = (await Api.GetAsync<List<Normyx.Web.Models.IntegrationWebhookDto>>("/integrations/webhooks")) ?? [];
            _policyPacks = (await Api.GetAsync<List<Normyx.Web.Models.PolicyPackSelectionDto>>("/tenants/policy-packs")) ?? [];

            HydrateWebhookForm("Jira", _jira);
            HydrateWebhookForm("AzureDevOps", _azureDevOps);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            Nav.NavigateTo("/login");
        }
    }

    private void HydrateWebhookForm(string provider, WebhookForm form)
    {
        var existing = _integrations.FirstOrDefault(x => x.Provider.Equals(provider, StringComparison.OrdinalIgnoreCase));
        if (existing is null)
        {
            return;
        }

        form.WebhookUrl = existing.WebhookUrl;
        form.IsEnabled = existing.IsEnabled;
    }

    private async Task CreateUserAsync()
    {
        try
        {
            _error = string.Empty;
            var roles = _selectedNewUserRoles.Count == 0
                ? ["ProductOwner"]
                : _selectedNewUserRoles.ToArray();
            await Api.PostAsync("/tenants/users", new
            {
                email = _newUser.Email,
                displayName = _newUser.DisplayName,
                password = _newUser.Password,
                roles
            });

            await LoadAsync();
            _newUser.Reset();
            _selectedNewUserRoles.Clear();
            _selectedNewUserRoles.Add("ProductOwner");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private async Task SaveWebhookAsync(string provider, WebhookForm form)
    {
        try
        {
            _error = string.Empty;
            await Api.PutAsync($"/integrations/webhooks/{provider}", new
            {
                webhookUrl = form.WebhookUrl,
                authHeader = form.AuthHeader,
                isEnabled = form.IsEnabled
            });
            _integrationMessage = $"Saved integration for {provider}.";
            await LoadAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private async Task TestWebhookAsync(string provider)
    {
        try
        {
            _error = string.Empty;
            var result = await Api.PostAsync<Normyx.Application.Abstractions.WebhookPublishResult>($"/integrations/webhooks/{provider}/test", new { });
            _integrationMessage = result is null
                ? $"Test sent to {provider}."
                : $"{provider} test status: {result.StatusCode}, success={result.Success}.";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private Task SaveJiraWebhookAsync() => SaveWebhookAsync("Jira", _jira);
    private Task SaveAzureWebhookAsync() => SaveWebhookAsync("AzureDevOps", _azureDevOps);
    private Task TestJiraWebhookAsync() => TestWebhookAsync("Jira");
    private Task TestAzureWebhookAsync() => TestWebhookAsync("AzureDevOps");

    private async Task SetPolicyPackAsync(Guid policyPackId, bool enabled)
    {
        try
        {
            _error = string.Empty;
            await Api.PutAsync($"/tenants/policy-packs/{policyPackId}/enabled", new { enabled });
            await LoadAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private async Task SaveTenantAsync()
    {
        try
        {
            _error = string.Empty;
            await Api.PutAsync("/tenants/me", new { name = _tenantName });
            await LoadAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private Task ToggleNewUserRole(string roleName, bool enabled)
    {
        if (enabled)
        {
            _selectedNewUserRoles.Add(roleName);
        }
        else
        {
            _selectedNewUserRoles.Remove(roleName);
        }

        return Task.CompletedTask;
    }

    private sealed class CreateUserForm
    {
        public string Email { get; set; } = string.Empty;
        public string DisplayName { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;

        public void Reset()
        {
            Email = string.Empty;
            DisplayName = string.Empty;
            Password = string.Empty;
        }
    }

    private sealed class WebhookForm
    {
        public string WebhookUrl { get; set; } = string.Empty;
        public string? AuthHeader { get; set; }
        public bool IsEnabled { get; set; }
    }
}
