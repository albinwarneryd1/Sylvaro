<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["Normyx.Web.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <ErrorBoundary>
        <ChildContent>
            <Routes @rendermode="PageRenderMode" />
        </ChildContent>
        <ErrorContent>
            <div class="card-shell">
                <h2>Workspace temporarily unavailable</h2>
                <p>An unexpected rendering fault was captured. Reload to recover the interactive session.</p>
                <a class="btn-main" href=".">Reload Workspace</a>
            </div>
        </ErrorContent>
    </ErrorBoundary>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    private static readonly InteractiveServerRenderMode PageRenderMode = new(prerender: false);
}
